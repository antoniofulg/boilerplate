FROM node:20-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache libc6-compat

# Copy package files
COPY package.json .npmrc* ./
COPY apps/frontend/package.json ./apps/frontend/
COPY shared/packages/contracts/package.json ./shared/packages/contracts/
COPY shared/packages/config/package.json ./shared/packages/config/
COPY shared/packages/ui/package.json ./shared/packages/ui/

# Install dependencies using npm workspaces
RUN npm install --legacy-peer-deps

# Copy all source code
COPY . .

EXPOSE 3000

ENV NEXT_TELEMETRY_DISABLED=1
ENV HOSTNAME="0.0.0.0"

# Start dev server
CMD ["sh", "-c", "cd apps/frontend && npm run dev"]
