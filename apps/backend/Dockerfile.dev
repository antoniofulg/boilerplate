FROM node:20-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache libc6-compat python3 make g++

# Copy package files
COPY package.json .npmrc* ./
COPY apps/backend/package.json ./apps/backend/
COPY shared/packages/contracts/package.json ./shared/packages/contracts/
COPY shared/packages/config/package.json ./shared/packages/config/

# Install dependencies using npm workspaces
RUN npm install --legacy-peer-deps

# Copy all source code
COPY . .

EXPOSE 3001

# Generate Prisma and start dev server
CMD ["sh", "-c", "cd apps/backend && npm run prisma:generate || true && npm run start:dev"]
